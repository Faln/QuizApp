<!DOCTYPE html>
<html>
  <head>
    <title>Question <%= questionNumber %></title>
    <link rel='stylesheet' href='/stylesheets/questionsStyle.css' />
  </head>
  <body>
    <main>
        <div>
          <h2 class="question"><%= questionPrompt %></h2>
        </div>

        <div class="score">
          <h3>Score: <%= score %>/<%= totalQuestions %></h3>
        </div>

        <form class="choices" id="choices" action="/questions/answer" method="post">
            <% if (loggedIn) { %>
              <input type="hidden" name="name" value="<%= name %>">
              <input type="hidden" name="email" value="<%= email %>">
              <input type="hidden" name="loggedIn" value="<%= loggedIn %>">
            <% } %>

            <button class="choice" id="A" name="answer" value="A"><%= choiceA %></label>
            <button class="choice" id="B" name="answer" value="B"><%= choiceB %></label>
            <button class="choice" id="C" name="answer" value="C"><%= choiceC %></label>
            <button class="choice" id="D" name="answer" value="D"><%= choiceD %></label>
        </div>
    </main>

    <script src="./javascripts/questionsScript.js"></script>
  </body> 
</html>
